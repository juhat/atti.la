<section class="text-gray-600 body-font">
    <div class="container px-5 py-12 mx-auto flex flex-wrap">
        <div class="flex flex-col text-left w-full mb-20">
            <h2 class="text-xs text-gray-500 tracking-widest font-medium title-font mb-1 uppercase">{{ about.subtitle }}</h2>
            <h1 class="sm:text-3xl text-2xl font-medium title-font text-gray-900">{{ about.title }}</h1>
        </div>
        <div class="flex flex-wrap -m-4">
            {% for item in about.items %}
                <div class="p-4 lg:w-1/2 md:w-full">
                    <div class="flex border-2 rounded-lg border-gray-200 border-opacity-50 p-8 sm:flex-row flex-col bg-gray-50">
                        <div class="w-16 h-16 sm:mr-8 sm:mb-0 mb-4 inline-flex items-center justify-center rounded-full bg-gray-400 text-gray-500 flex-shrink-0">
                            <img src="{{ item.image }}" class="object-cover object-center rounded-full"/>
                        </div>
                        <div class="flex-grow">
                            <h2 class="text-gray-900 text-lg title-font font-medium mb-3">{{ item.name }}</h2>
                            <p class="leading-relaxed text-base">{{ item.description }}</p>
                            <a href="{{ item.url }}" target="_blank" class="mt-3 text-gray-500 inline-flex items-center hover:text-gray-800 hover:underline">{{ item.url_title }}
                                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
                                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
