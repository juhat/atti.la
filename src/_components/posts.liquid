<section class="text-gray-600 body-font overflow-hidden ">
    <div class="container px-5 py-12 mx-auto">
        <div class="flex flex-col text-left w-full mb-20">
            <h2 class="text-xs text-gray-500 tracking-widest font-medium title-font mb-1 uppercase">Gondolatok /
                írások</h2>
            <h1 class="sm:text-3xl text-2xl font-medium title-font text-gray-900">Blog</h1>
        </div>
        <div class="">
            <div class="">
                {% for post in posts.resources %}
                    <div class="container px-5 py-10 mb-5 mx-auto border-gray-200 border-opacity-50 bg-gray-100 rounded-lg">
                        <div class="py-8 flex flex-wrap md:flex-nowrap">
                            <div class="md:w-64 md:mb-0 mb-6 flex-shrink-0 flex flex-col">
                                {% for category in post.categories %}
                                    <span class="font-semibold title-font text-gray-700">{{ category }}</span>
                                {% endfor %}
                                <span class="mt-1 text-gray-500 text-sm">{{ post.date | date_to_string }}</span>
                            </div>
                            <div class="md:flex-grow">
                                <a href="{{ post.relative_url }}">
                                    <h2 class="text-2xl font-medium text-gray-900 title-font mb-2 hover:underline">{{ post.title }}</h2>
                                </a>
                                <p class="leading-relaxed">{{ post.excerpt }}</p>
                                <a href="{{ post.relative_url }}"
                                   class="text-indigo-600 inline-flex items-center mt-4 hover:underline">Tovább
                                    <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"
                                         fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M5 12h14"></path>
                                        <path d="M12 5l7 7-7 7"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
</section>